#include <stdio.h>

int main() {
    FILE *fp;
    char sentence[200];
    int i;

    fp = fopen("diary.txt", "w");

    if (fp == NULL) {
        printf("Error opening file!\n");
        return 1;
    }

    for (i = 1; i <= 3; i++) {
        printf("Enter sentence from user %d: ", i);
        scanf(" %[^\n]", sentence);
        fprintf(fp, "%s\n", sentence);
    }

    fclose(fp);

    fp = fopen("diary.txt", "r");

    if (fp == NULL) {
        printf("Error reading file!\n");
        return 1;
    }

    printf("\nContents of diary.txt:\n");

    while (fgets(sentence, sizeof(sentence), fp) != NULL) {
        printf("%s", sentence);
    }

    fclose(fp);

    return 0;
}
