#include <stdio.h>

// Structure definition
struct Mobile {
    int mobileId;
    char brand[50];
    char model[50];
    float price;
};

int main() {
    struct Mobile m;

    // Input mobile details
    printf("Enter Mobile ID: ");
    scanf("%d", &m.mobileId);

    printf("Enter Brand Name: ");
    scanf(" %[^\n]", m.brand);   // read full brand name with spaces

    printf("Enter Model Name: ");
    scanf(" %[^\n]", m.model);   // read full model name with spaces

    printf("Enter Mobile Price: ");
    scanf("%f", &m.price);

    // Display mobile details
    printf("\n--- Mobile Details ---\n");
    printf("Mobile ID   : %d\n", m.mobileId);
    printf("Brand       : %s\n", m.brand);
    printf("Model       : %s\n", m.model);
    printf("Price       : %.2f\n", m.price);

    return 0;
}