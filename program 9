#include <stdio.h>

int main() {
    float price, discountPercent, discountAmount, finalPrice;

    printf("Enter total price: ");
    scanf("%f", &price);

    printf("Enter discount percentage: ");
    scanf("%f", &discountPercent);

    discountAmount = (price * discountPercent) / 100;
    finalPrice = price - discountAmount;

    printf("\nDiscount Amount = %.2f", discountAmount);
    printf("\nFinal Price After Discount = %.2f\n", finalPrice);

    return 0;
}
