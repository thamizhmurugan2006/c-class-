#include <stdio.h>

int main() {
    int n, i;
    int sum = 0;

    printf("Enter a number: ");
    scanf("%d", &n);

    if (n < 1) {
        printf("Please enter a positive number.\n");
    } else {
        for (i = 1; i <= n; i++) {
            sum = sum + i;
        }

        printf("Sum of first %d natural numbers = %d\n", n, sum);
    }

    return 0;
}