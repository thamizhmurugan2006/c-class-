#include <stdio.h>

int main() {
    int n, i;
    float marks, highest;
    int topperRoll;

    printf("Enter number of students: ");
    scanf("%d", &n);

    // Input for first student
    printf("Enter marks of student 1: ");
    scanf("%f", &marks);

    highest = marks;
    topperRoll = 1;

    // Input remaining students
    for(i = 2; i <= n; i++) {
        printf("Enter marks of student %d: ", i);
        scanf("%f", &marks);

        if(marks > highest) {
            highest = marks;
            topperRoll = i;
        }
    }

    printf("\n-----------------------------");
    printf("\nTopper Roll Number = %d", topperRoll);
    printf("\nHighest Marks     = %.2f", highest);
    printf("\n-----------------------------\n");

    return 0;
}