#include <stdio.h>

// Function to calculate average
float calculateAverage(int a, int b, int c) {
    float avg;
    avg = (a + b + c) / 3.0;
    return avg;
}

int main() {
    int n1, n2, n3;
    float average;

    printf("Enter three numbers: ");
    scanf("%d %d %d", &n1, &n2, &n3);

    // Function call
    average = calculateAverage(n1, n2, n3);

    printf("\nAverage = %.2f\n", average);

    return 0;
}