#include <stdio.h>

struct Student {
    int id;
    char name[30];
    float marks;
};

int main() {
    struct Student s[50];
    int n, i, searchId, found = 0;

    printf("Enter number of records: ");
    scanf("%d", &n);

    // Input records
    for(i = 0; i < n; i++) {
        scanf("%d %s %f", &s[i].id, s[i].name, &s[i].marks);
    }

    // Search by ID
    printf("Enter ID to search: ");
    scanf("%d", &searchId);

    for(i = 0; i < n; i++) {
        if(s[i].id == searchId) {
            printf("\nRecord Found:\n");
            printf("ID    : %d\n", s[i].id);
            printf("Name  : %s\n", s[i].name);
            printf("Marks : %.2f\n", s[i].marks);
            found = 1;
            break;
        }
    }

    if(found == 0) {
        printf("\nRecord with ID %d not found.\n", searchId);
    }

    return 0;
}