#include <stdio.h>

struct Item {
    int id;
    char name[20];
    float price;
};

int main() {
    struct Item it[20];
    int n = 0, ch, i, id, found;

    do {
        printf("\n1.Add  2.Display  3.Search  4.Update  5.Exit\n");
        printf("Enter choice: ");
        scanf("%d", &ch);

        switch(ch) {
        case 1: // Add
            scanf("%d %s %f", &it[n].id, it[n].name, &it[n].price);
            n++;
            break;

        case 2: // Display
            for(i = 0; i < n; i++)
                printf("%d %s %.2f\n", it[i].id, it[i].name, it[i].price);
            break;

        case 3: // Search
            scanf("%d", &id);
            found = 0;
            for(i = 0; i < n; i++)
                if(it[i].id == id) {
                    printf("%d %s %.2f\n", it[i].id, it[i].name, it[i].price);
                    found = 1; break;
                }
            if(!found) printf("Not found\n");
            break;

        case 4: // Update
            scanf("%d", &id);
            for(i = 0; i < n; i++)
                if(it[i].id == id) {
                    scanf("%s %f", it[i].name, &it[i].price);
                    printf("Updated\n");
                    break;
                }
            break;
        }
    } while(ch != 5);

    return 0;
}