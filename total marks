#include <stdio.h>

int main() {
    int n, i;
    float marks, total = 0, average;

    printf("Enter number of subjects: ");
    scanf("%d", &n);

    for(i = 1; i <= n; i++) {
        printf("Enter marks of subject %d: ", i);
        scanf("%f", &marks);
        total += marks;
    }

    average = total / n;

    printf("\nTotal Marks = %.2f", total);
    printf("\nAverage Marks = %.2f\n", average);

    return 0;
}
