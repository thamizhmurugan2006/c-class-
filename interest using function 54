#include <stdio.h>

// Function to calculate simple interest
float calculateInterest(float principal, float rate, float time) {
    float interest;
    interest = (principal * rate * time) / 100;
    return interest;
}

int main() {
    float principal, rate, time, interest;

    printf("Enter principal amount: ");
    scanf("%f", &principal);

    printf("Enter rate of interest (in %%): ");
    scanf("%f", &rate);

    printf("Enter time (in years): ");
    scanf("%f", &time);

    // Function call
    interest = calculateInterest(principal, rate, time);

    printf("\n----- INTEREST DETAILS -----\n");
    printf("Principal Amount : %.2f\n", principal);
    printf("Rate of Interest : %.2f %%\n", rate);
    printf("Time Period      : %.2f years\n", time);
    printf("Simple Interest  : %.2f\n", interest);
    printf("Total Amount     : %.2f\n", principal + interest);

    return 0;
}