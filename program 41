#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char password[50];
    int i;
    int hasUpper = 0, hasLower = 0, hasDigit = 0, hasSpecial = 0;

    printf("Enter a password: ");
    scanf("%s", password);

    // Check length
    if (strlen(password) < 8) {
        printf("Password is Invalid!\n");
        printf("Reason: Password must be at least 8 characters long.\n");
        return 0;
    }

    // Check each character
    for (i = 0; password[i] != '\0'; i++) {
        if (isupper(password[i]))
            hasUpper = 1;
        else if (islower(password[i]))
            hasLower = 1;
        else if (isdigit(password[i]))
            hasDigit = 1;
        else
            hasSpecial = 1;
    }

    // Final validation
    if (hasUpper && hasLower && hasDigit && hasSpecial) {
        printf("Password is Valid!\n");
    } else {
        printf("Password is Invalid!\n");
        printf("Reason:\n");
        if (!hasUpper)   printf("- Must contain at least one uppercase letter\n");
        if (!hasLower)   printf("- Must contain at least one lowercase letter\n");
        if (!hasDigit)   printf("- Must contain at least one digit\n");
        if (!hasSpecial) printf("- Must contain at least one special character\n");
    }

    return 0;
}