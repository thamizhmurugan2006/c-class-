#include <stdio.h>

int main() {
    int choice;
    float price = 0;

    printf("----- MENU -----\n");
    printf("1. Tea        - Rs.10\n");
    printf("2. Coffee     - Rs.15\n");
    printf("3. Samosa     - Rs.20\n");
    printf("4. Sandwich   - Rs.50\n");
    printf("----------------\n");

    printf("Enter your choice (1-4): ");
    scanf("%d", &choice);

    switch(choice) {
        case 1:
            price = 10;
            printf("You selected Tea.\n");
            break;

        case 2:
            price = 15;
            printf("You selected Coffee.\n");
            break;

        case 3:
            price = 20;
            printf("You selected Samosa.\n");
            break;

        case 4:
            price = 50;
            printf("You selected Sandwich.\n");
            break;

        default:
            printf("Invalid choice!\n");
    }

    if (price > 0) {
        printf("Total Price = Rs.%.2f\n", price);
    }

    return 0;
}